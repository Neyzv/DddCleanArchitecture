<UserControl
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d"
    x:Class="DddCleanArchitecture.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:markup="clr-namespace:DddCleanArchitecture.MarkupExtensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:DddCleanArchitecture.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  For autocompletion only  -->
    <d:UserControl.DataContext>
        <vm:HomeViewModel />
    </d:UserControl.DataContext>

    <UserControl.DataContext>
        <markup:ResolvedViewModel ViewModel="{x:Type vm:HomeViewModel}" />
    </UserControl.DataContext>

    <ItemsControl
        HorizontalAlignment="Stretch"
        ItemsSource="{Binding Articles, Mode=OneWay}"
        VerticalAlignment="Stretch">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <UniformGrid
                    Columns="2"
                    MaxWidth="800"
                    MinWidth="600" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Grid
                    ClipToBounds="True"
                    Margin="10"
                    MinHeight="400">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80*" />
                        <RowDefinition Height="20*" />
                    </Grid.RowDefinitions>

                    <Border
                        Background="Blue"
                        CornerRadius="8,8,0,0"
                        Grid.Row="0" />

                    <Border
                        Background="AliceBlue"
                        CornerRadius="0,0,8,8"
                        Grid.Row="1">
                        <StackPanel>
                            <TextBlock Text="{Binding Title, Mode=OneWay}" />
                        </StackPanel>
                    </Border>
                </Grid>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>