<Window
    Background="White"
    Height="800"
    Title="MainWindow"
    Width="800"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    x:Class="DddCleanArchitecture.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:markup="clr-namespace:DddCleanArchitecture.MarkupExtensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:DddCleanArchitecture.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  For autocompletion only  -->
    <d:Window.DataContext>
        <vm:MainWindowViewModel />
    </d:Window.DataContext>

    <Window.DataContext>
        <markup:ResolvedViewModel ViewModel="{x:Type vm:MainWindowViewModel}" />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid
            Background="White"
            Effect="{StaticResource ContainerShadowXs}"
            Grid.Row="0"
            HorizontalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Content="{Binding HomeLabel, Mode=OneWay}" />
            </StackPanel>
        </Grid>

        <ScrollViewer
            Grid.Row="1"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
            <ContentControl
                Content="{Binding Current, Mode=OneWay}"
                HorizontalAlignment="Stretch"
                Margin="20" />
        </ScrollViewer>
    </Grid>
</Window>